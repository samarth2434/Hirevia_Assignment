{
  "name": "complete-auth-assessment-system",
  "version": "1.0.0",
  "description": "Complete Authentication & Assessment System with Next.js, Spring Boot, and Keycloak",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:video && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:video": "cd video-interview && npm install",
    "install:backend": "cd backend && ./mvnw compile",
    "start:keycloak": "docker-compose up -d keycloak",
    "start:backend": "cd backend && ./mvnw spring-boot:run",
    "start:frontend": "cd frontend && npm run dev",
    "start:video": "cd video-interview && npm run dev -- -p 3001",
    "stop:all": "docker-compose down && pkill -f 'spring-boot:run' && pkill -f 'next dev'",
    "clean:all": "npm run clean:frontend && npm run clean:video && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json .next",
    "clean:video": "cd video-interview && rm -rf node_modules package-lock.json .next",
    "clean:backend": "cd backend && ./mvnw clean",
    "dev": "concurrently \"npm run start:keycloak\" \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:video\"",
    "build:all": "npm run build:frontend && npm run build:video && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:video": "cd video-interview && npm run build",
    "build:backend": "cd backend && ./mvnw package -DskipTests"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "authentication",
    "assessment",
    "video-interview",
    "nextjs",
    "spring-boot",
    "keycloak",
    "oauth2",
    "jwt",
    "webrtc"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/complete-auth-assessment-system.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}